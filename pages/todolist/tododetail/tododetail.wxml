<!--pages/todolist/tododetail/tododetail.wxml-->
<view class="con">
  <view class="containerchild">
    <view class="containerchild2">
     <van-collapse value="{{ activeNames }}" bind:change="onChange">
        <van-collapse-item  title="被探访者信息" name="1" icon="manager">
         <van-cell-group >
          <van-cell title="姓名" value="{{user.name}}" />
          <van-cell title="读经" value="{{user.reading}}" />
          <van-cell title="祷告" value="{{user.pray}}" />
          <van-cell title="聚会" value="{{user.party}}" />
          <van-cell title="探访时间" value="{{user.visittime}}" />
          <van-cell title="探访地点" value="{{user.visitreason}}" />
          <van-cell title="关怀需要" value="{{user.careneed}}" />
          <van-cell title="备注" value="{{user.remark}}" />
         </van-cell-group>
        </van-collapse-item>
      </van-collapse>
     </view>
  </view>
  <view class="divLine"></view>

  <view class="containerchild">
     <van-collapse value="{{ activeNames }}" bind:change="onChange">
      <van-collapse-item  title="司机信息"  name="2" icon="map-marked">
      <view wx:for="{{drivers}}" wx:key="index">
        <van-cell-group >
          <van-cell title="姓名" value="{{item.name}}" />
        </van-cell-group>
      </view>
      </van-collapse-item>
    </van-collapse>
  </view>
  <view class="divLine"></view>

  <view class="containerchild">
    <van-collapse value="{{ activeNames }}" bind:change="onChange">
      <van-collapse-item  title="探访员信息"  name="3" icon="like">
        <view wx:for="{{vistors}}" wx:key="index">
          <van-cell-group >
            <van-cell title="姓名" value="{{item.name}}" />
          </van-cell-group>
        </view>
      </van-collapse-item>
    </van-collapse>
  </view>
  <view class="divLine"></view>
  
  <button class="button" bindtap='sumbit'>
    <view>填写探访汇报</view>
  </button>
  <van-toast id="van-toast" />
</view>

  