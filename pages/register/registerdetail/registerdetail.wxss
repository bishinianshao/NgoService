page{
 background: #f3f7f7;
}
.gender{
  font-size: 35rpx;
  padding-left: 35rpx;
  background-color: #fff;
  padding-bottom: 25rpx;
  padding-top: 25rpx;
}
.select_box{
 background: #fff;
 width: 80%;
 margin: 30rpx auto;
 position: relative;
 z-index: 999;
}
.select{
 box-sizing: border-box;
 width: 100%;
 height: 70rpx;
 border:1px solid #efefef;
 border-radius: 8rpx;
 display: flex;
 align-items: center;
 padding: 0 20rpx;
}
.select_text{
 font-size: 30rpx;
 flex: 1;
}
.select_img{
 width: 40rpx;
 height: 40rpx;
 display: block;
 transition:transform 0.3s;
}
.select_img_rotate{
 transform:rotate(180deg); 
}
.option_box{
 position: absolute;
 top: 70rpx;
 width: 100%;
 border:1px solid #efefef;
 box-sizing: border-box;
 height: 0;
 overflow-y: auto;
 border-top: 0;
 background: #fff;
 transition: height 0.3s;
}
.option{
 display: block;
 line-height: 40rpx;
 font-size: 30rpx;
 border-bottom: 1px solid #efefef;
 padding: 10rpx;
}
.section{
  padding-left: 35rpx;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  background-color: white
}
.section__title{
  font-size: 35rpx;
}
.picker{
  font-size: 35rpx;
  display: flex;
}
.checkboxgroup{
  display: flex;
  padding-left: 35rpx
}
.checkbox{
  font-size: 35rpx;
  background-color: white;
  padding-bottom: 25rpx;
  padding-top: 25rpx;
}
.button{
  width: 90%;
  margin-bottom:20rpx;
  margin-left: 10px;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: green;
  color: white;
  float: left;
  font-size: 35rpx;
}

.pickerdetail{
  padding-left: 145rpx;
}
.divLine{
 background: #F3F3F3;
