<!--pages/administrator/applyaudit/applydetail/applydetail.wxml-->
<view class="con">
  <view class="containerchild">
    <view class="containerchild2">
     <view style="  display: flex; flex-direction: row;">  
      <image style="width: 20px; height: 20px; background-color: white;" src="../../../../Images/icons8-collaborator-male-24.png"></image>
      <view class="info">被探访者信息</view>
     </view>
      <van-cell-group >
        <van-cell title="姓名" value="{{user.name}}" />
        <van-cell title="读经" value="{{user.reading}}" />
        <van-cell title="祷告" value="{{user.pray}}" />
        <van-cell title="聚会" value="{{user.party}}" />
        <van-cell title="探访时间" value="{{user.visittime}}" />
        <van-cell title="探访地点" value="{{user.visitreason}}" />
        <van-cell title="关怀需要" value="{{user.careneed}}" />
        <van-cell title="备注" value="{{user.remark}}" />
      </van-cell-group>
    </view>
  </view>
  <view class="divLine"></view>
  <view class="containerchild">
    <view class="containerchild2">
      <image style="width: 20px; height: 20px; background-color: white;" src="../../../../Images/icons8-suv-24.png"></image>
      <view class="info">司机信息</view>
    </view>
    <view wx:for="{{drivers}}" wx:key="index">
      <van-swipe-cell   right-width="{{ 65 }}"  left-width="{{ 105 }}" >
        <van-cell-group >
          <van-cell title="姓名" value="{{item.name}}" />
        </van-cell-group>
          <view slot="right" bindtap="handleDelete">删除</view>
          <view slot="left" bindtap="handlePriDuty">指定主要负责人</view>
      </van-swipe-cell>
    </view>
  </view>
  <view class="divLine"></view>
  <view class="containerchild">
    <view class="containerchild2">
      <image style="width: 20px; height: 20px; background-color: white;" src="../../../../Images/icons8-heart-outline-24.png"></image>
      <view class="info">探访员信息</view>
    </view>
   
    <view wx:for="{{vistors}}" wx:key="index">
      <van-swipe-cell   right-width="{{ 65 }}"  left-width="{{ 105 }}" >
        <van-cell-group >
          <van-cell title="姓名" value="{{item.name}}" />
        </van-cell-group>
          <view slot="right" bindtap="handleDelete">删除</view>
          <view slot="left" bindtap="handlePriDuty">指定主要负责人</view>
      </van-swipe-cell>
    </view>
  </view>
  <view class="divLine"></view>
  <view>
    <button class="button1" bindtap='pass'>
      <view>通过</view>
    </button>
    <button class="button2" bindtap='reject'>
      <view>驳回</view>
    </button>
  </view>
  <van-toast id="van-toast" />
</view>