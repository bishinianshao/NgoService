<view>
 <view class='gender'>基本信息 ： </view>
  <van-cell-group>
    <van-cell title="姓名:" value="{{userInfo.name}}" />
    <van-cell title="性别:" value="{{userInfo.gender}}" />
    <van-cell title="出生日期:" value="{{userInfo.birthdate}}" />
    <van-cell title="家庭住址:" value="{{userInfo.address}}" />
    <van-cell title="联系方式:" value="{{userInfo.phone}}" />
    <van-cell title="信主年份:" value="{{userInfo.believeyear}}" />
    <van-cell title="空闲时间:" value="{{userInfo.freetime}}" />
    <van-cell title="配偶信仰:" value="{{userInfo.spousebelief}}" />
    <van-cell title="所属会堂:" value="{{userInfo.hall}}" />
  </van-cell-group>
</view>

<view>
  <view  wx:if = "{{isDriver}}">
    <view class='gender'>司机信息 ： </view>
    <van-cell-group>
      <van-cell title="车牌号:" value="{{driverInfor.numberplates}}" />
      <van-cell title="可载人数:" value="{{driverInfor.passengers}}" />
      <van-cell title="熟悉区域:" value="{{driverInfor.familiararea}}" />
    </van-cell-group>
  </view>
</view>

<view wx:if = "{{isVistors}}">
  <view class='gender'>探访员信息</view>
  <view class="section">
   <textarea 
    style='width:600rpx; font-size: 35rpx;'  
    maxlength='-1' 
    value="{{content}}"
    auto-focus
    bindinput='contentChange'>   
   </textarea>
  </view>
</view>

<view>
  <button class="button1" bindtap='pass'>
    <view>通过</view>
  </button>
  <button class="button2" bindtap='reject'>
    <view>驳回</view>
  </button>
</view>
